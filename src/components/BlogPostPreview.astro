---
import FormattedDate from './FormattedDate.astro';
import { type CollectionEntry } from 'astro:content';
interface Props {
  post: CollectionEntry<'bits'>;
}

const { post } = Astro.props;
---

<article class="border-b border-gray-700 pb-2">
  <h2 class="text-2xl font-semibold mb-2">
    <a href={`/bits/${post.slug}`} class="hover:text-blue-400">{post.data.title}</a>
  </h2>
  <p class="text-gray-400 text-sm mb-2"><FormattedDate date={new Date(post.data.date)} /></p>
  <p class="text-gray-300 mb-2">{post.data.excerpt}</p>
</article>